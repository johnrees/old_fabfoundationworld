%nav.top-bar.fixed
  %ul.title-area
    / Title Area
    %li.name
      %h1
        %a{:href => "#"} Fab Lab World
    / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
    %li.toggle-topbar.menu-icon
      %a{:href => "#"}
        %span Menu
  %section.top-bar-section
    / Left Nav Section
    %ul.left
      %li.divider
      %li.has-dropdown
        %a{:href => "#"} All Fab Labs
        %ul.dropdown
          %li.active
            %a{:href => "#"} All Fab Labs
          %li.divider
          %li
            %a{:href => "#"} Fab Labs
          %li
            %a{:href => "#"} Mini Fab Labs
          %li
            %a{:href => "#"} Planned Fab Labs
      %li.divider
      %li.has-form
        %form
          .row.collapse
            %input{type: "text", placeholder: "Search..."}/
            / .small-4.columns
            /   %a.button{:href => "#"} Search
    / Right Nav Section
    %ul.right
      %li.divider
      %li.has-form
        = link_to "Add a Lab", new_lab_path, class: 'button'

